<!-- breadscrumbs -->
<% breadcrumb :users %>
<div class="row">
    <div class="w-100">
        <div class="ibox">
            <div class="ibox-title d-flex justify-content-between align-items-center pr-3">
                <h5>Listado de Usuarios</h5>
                <form action="" method="GET" class="d-flex justify-content-between align-items-center">
                    <div class="input-group">
                            <input type="text" class="form-control" placeholder="Buscar.." aria-label="Recipient's username" aria-describedby="button-addon2" name="" value="">
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="submit" id="button-addon2"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="ibox-content">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th class="">Documento</th>
                                <th class="">Nombres</th>
                                <th class="">Apellidos</th>
                                <th class="">Fecha Creacion</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @users.each do |user| %>
                                <tr>
                                    <td>
                                        <%= link_to user.ndocumento, user_anotaciones_path(user) %>
                                    </td>
                                    <td>
                                        <%= user.nombres%>
                                    </td>
                                    <td>
                                        <%= user.apellidos%>
                                    </td>
                                    <td>
                                        <%= user.created_at%>
                                    </td>
                                </tr>
                                <%end%>
                        </tbody>
                    </table>
                    <%= paginate @users, theme: 'twitter-bootstrap-4' %>
                        <%= link_to "Exportar a Excel", toexcel_path(format: "xlsx"), class: "btn btn-primary" %>
                </div>
            </div>
        </div>
    </div>
